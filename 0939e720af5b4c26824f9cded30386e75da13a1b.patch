From 0939e720af5b4c26824f9cded30386e75da13a1b Mon Sep 17 00:00:00 2001
From: Jesse Chan <jc@linux.com>
Date: Fri, 23 Dec 2016 20:26:51 +0800
Subject: [PATCH] exynos: mfc: move header to uapi

---
 drivers/media/platform/exynos/mfc/s5p_mfc_common.h              | 2 +-
 drivers/media/platform/exynos/mfc/s5p_mfc_data_struct.h         | 2 +-
 include/uapi/linux/Kbuild                                       | 1 +
 .../exynos/mfc => include/uapi/linux}/exynos_mfc_media.h        | 0
 4 files changed, 3 insertions(+), 2 deletions(-)
 rename {drivers/media/platform/exynos/mfc => include/uapi/linux}/exynos_mfc_media.h (100%)

diff --git a/drivers/media/platform/exynos/mfc/s5p_mfc_common.h b/drivers/media/platform/exynos/mfc/s5p_mfc_common.h
index 9cad00c3fe4..a1544cc2632 100644
--- a/drivers/media/platform/exynos/mfc/s5p_mfc_common.h
+++ b/drivers/media/platform/exynos/mfc/s5p_mfc_common.h
@@ -19,9 +19,9 @@
 #include <linux/workqueue.h>
 #include <linux/slab.h>
 #include <linux/videodev2_exynos_media.h>
+#include <linux/exynos_mfc_media.h>
 
 #include "exynos-mfc.h"
-#include "exynos_mfc_media.h"
 
 #if defined(CONFIG_EXYNOS_MFC_V10)
 #include "regs-mfc-v10.h"
diff --git a/drivers/media/platform/exynos/mfc/s5p_mfc_data_struct.h b/drivers/media/platform/exynos/mfc/s5p_mfc_data_struct.h
index fa0bf1c7e48..2b1cd63dc75 100644
--- a/drivers/media/platform/exynos/mfc/s5p_mfc_data_struct.h
+++ b/drivers/media/platform/exynos/mfc/s5p_mfc_data_struct.h
@@ -31,7 +31,7 @@
 #include <linux/pm_qos.h>
 #endif
 
-#include "exynos_mfc_media.h"
+#include <linux/exynos_mfc_media.h>
 #include "s5p_mfc_nal_q_struct.h"
 
 #define MFC_NUM_CONTEXTS	32
diff --git a/include/uapi/linux/Kbuild b/include/uapi/linux/Kbuild
index 6aab752b620..4727d457dd3 100644
--- a/include/uapi/linux/Kbuild
+++ b/include/uapi/linux/Kbuild
@@ -112,6 +112,7 @@ header-y += errno.h
 header-y += errqueue.h
 header-y += ethtool.h
 header-y += eventpoll.h
+header-y += exynos_mfc_media.h
 header-y += fadvise.h
 header-y += falloc.h
 header-y += fanotify.h
diff --git a/drivers/media/platform/exynos/mfc/exynos_mfc_media.h b/include/uapi/linux/exynos_mfc_media.h
similarity index 100%
rename from drivers/media/platform/exynos/mfc/exynos_mfc_media.h
rename to include/uapi/linux/exynos_mfc_media.h
